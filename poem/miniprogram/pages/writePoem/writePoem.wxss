/* miniprogram/pages/writePoem/writePoem.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.wirtePoem{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  background: rgb(227, 227, 227);
  display: flex;
  justify-content: center;
}

#back{
  width: 30rpx;
  height: 45rpx;
  margin: 0 30rpx;
}

.topic{
  position: absolute;
  top: 50rpx;
  width: 100%;
  height: 6%;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  background: white;
  vertical-align: middle;
  border-bottom: 1rpx solid rgb(211, 211, 211);
}

.topBan{
  width: 95%;
  height: 80%;
  background: white;
  position: absolute;
  top: 170rpx;
  box-shadow: 0rpx 10rpx 5rpx rgb(148, 148, 148);
}

#poemBack{
  width: 550rpx;
  height: 550rpx;
  margin: 20rpx auto;
  margin-top: 100rpx;
}
#poemBack image{
  width: 550rpx;
  height: 550rpx;
}

.pageNum{
  width: 100%;
  height: 5%;
  position: absolute;
  bottom: 0rpx;
  font-size: 20rpx;
  text-align: center;
}
#userName{
  font-size: 25rpx;
  font-family: STXingkai;
  width: 2%;
  max-width: 2%;
  line-height: 25rpx;
}

#introduce{
  font-family: STXingkai;
  font-size: 30rpx;
}
