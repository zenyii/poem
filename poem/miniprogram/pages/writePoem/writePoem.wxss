/* miniprogram/pages/writePoem/writePoem.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.wirtePoem{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  background: rgb(227, 227, 227);
  display: flex;
  justify-content: center;
}

#back{
  width: 30rpx;
  height: 45rpx;
  margin: 0 30rpx;
}

.topic{
  position: absolute;
  top: 50rpx;
  width: 100%;
  height: 6%;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  background: white;
  vertical-align: middle;
  border-bottom: 1rpx solid rgb(211, 211, 211);
}
.content{
  width: 95%;
  height: 95%;
  position: absolute;
  top: 170rpx;
}
.topBan{
  width: 100%;
  height: 85%;
  background: white;
  position: absolute;
  box-shadow: 0rpx 10rpx 5rpx rgb(148, 148, 148);
}

#poemBack{
  width: 550rpx;
  height: 550rpx;
  margin: 20rpx auto;
  margin-top: 100rpx;
}
#poemBack image{
  width: 550rpx;
  height: 550rpx;
}

.pageNum{
  width: 100%;
  height: 5%;
  position: absolute;
  bottom: 100rpx;
  font-size: 20rpx;
  text-align: center;
}
#userName{
  font-size: 30rpx;
  font-family: STXingkai;
  width: 2%;
  max-width: 2%;
  line-height: 30rpx;
  position: absolute;
  bottom: 150rpx;
  left: 100rpx;
  word-break: break-all;
}

#introduce{
  font-family: STXingkai;
  font-size: 35rpx;
  width: 35rpx;
  max-width: 35rpx;
  word-break: break-all;
  position: absolute;
  top: 720rpx;
  left: 280rpx;
}

#poemName{
  font-family: STXingkai;
  font-size: 50rpx;
  width: 50rpx;
  max-width: 50rpx;
  word-break: break-all;
  position: absolute;
  top: 680rpx;
  left: 340rpx;
}
.wrap{
  width: 90%;
  height: 50%;
  background: rgb(232, 232, 232);
  margin: 30rpx auto;
}
#inputArea{
  width: 85%;
  height: 45%;
  position: absolute;
  top: 50rpx;
  margin-left: 15rpx;
  font-family: STXingkai; 
  font-size: 30rpx;
}

.submit{
  font-family: STXingkai; 
  font-size: 50rpx;
  float: right;
  margin-right: 40rpx;
}
