<!--miniprogram/pages/writePoem/writePoem.wxml-->
<view class='wirtePoem'>
  <!--标题栏-->
  <view class='topic'>
    <image bindtap='goHome' id='back' src='../../images/back.png'></image>
    <text>创建诗集</text>
  </view>
  <!--创建诗集封面-->
  <view class='topBan'>
    <view id='poemBack'><image src='../../images/poemBack.png'></image></view>
    <view id='userName'>用户名</view>
    <input id='introduce' placeholder='输入诗集简介'></input>
    <input id='poemName' placeholder='输入诗集名称'></input>
  </view>
  <!--页码-->
  <view class='pageNum'>1/1</view>
</view>