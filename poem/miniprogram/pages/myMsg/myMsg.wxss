/* miniprogram/pages/detailTopic/detailTopic.wxss */
page{
    height: 100vh;
}
.zhaiHeader{
    position: relative;
    padding:25px 20px 0 20px;
}
view{
    box-sizing: border-box; 
}
.zhaiTitle {
    height: 36px;
    margin: 0 auto;
}

.zhaiHeader .back {
    width: 32rpx;
    height: 48rpx;
    position: absolute;
}
.set{
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    padding: 20rpx;
    font-size: 18px;
}
.set image{
    width: 25rpx;
    height: 30rpx;
}
.msg{
    font-size: 14px;
    display: flex;
    flex-direction: row;

}
.msg image{
    width: 146rpx;
    height: 146rpx;
    position: relative;
    margin-right: 57rpx;
}

.redDot::before{
     position: absolute;
     top: 0;right: 0;
     content: "";
     display:inline-block;
     width: 24rpx;
     height: 24rpx;
     background: red;
     border-radius: 50%;
}
