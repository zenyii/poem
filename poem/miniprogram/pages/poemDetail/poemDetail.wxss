/* miniprogram/pages/poemDetail/poemDetail.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.poemDetail{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
}

.topic{
  position: absolute;
  top: 50rpx;
  width: 100%;
  height: 6%;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  vertical-align: middle;
  border-bottom: 1rpx solid rgb(211, 211, 211);
}

.mainArea{
  width: 100%;
  height: 58%;
  position: absolute;
  top: 200rpx;
  text-align: center;
}
.main{
  width: 100%;
  height: 100%;
  overflow: auto;
}

#poemTitle{
  width: 100%;
  font-weight: bold;
}
#author{
  width: 100%;
  margin-top: 40rpx;
  font-size: 30rpx;
}
#poem{
  width: 100%;
  line-height: 60rpx;
  font-family: Microsoft Yahei;
}

#back{
  width: 30rpx;
  height: 45rpx;
  margin: 50rpx;
}
#select{
  width: 80rpx;
  height: 80rpx;
}

#share{
  width: 80rpx;
  height: 80rpx;
  margin-left: 350rpx;
}

#share image{
  width: 40rpx;
  height: 40rpx;
}

.bth{
  width: 100%;
  height: 15%;
  display: flex;
  align-items: center;
  justify-content: center;
  position: absolute;
  bottom: 150rpx;
  border: 1rpx solid rgb(240, 240, 240);
}

#btnItem{
  width: 110rpx;
  height: 110rpx;
  margin-left: 25rpx;
}

.comTap{
  width: 75%;
  height: 50%;
  display: flex;
  align-items: center;
  margin: auto auto;
}

.comment{
  width: 100%;
  height: 10%;
  display: flex;
  align-items: center;
  position: absolute;
  bottom: 0;
  font-size: 20rpx;
}

#comNum{
  width: 100%;
  margin-left: 20rpx;
}

#flowerBack{
  width: 70%;
  height: 80%;
  position: absolute;
  right: 0;
  top: 50rpx;
  z-index: 1;
}

.note{
  width: 100%;
  height: 100%;
  overflow: auto;
}

#noteCon{
  margin: 50rpx auto;
  font-size: 38rpx;
}

.translate{
  width: 90%;
  height: 100%;
  margin: 0 auto;
  overflow: auto;
}

.appreciate{
  width: 90%;
  height: 100%;
  overflow: auto;
  margin: 0 auto;
}

.author{
  width: 90%;
  height: 100%;
  overflow: auto;
  margin: 0 auto;
}