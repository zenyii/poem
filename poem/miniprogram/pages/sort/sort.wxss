/* miniprogram/pages/sort/sort.wxss */
.sort{
  width: 100%;
  height: 100%;
}

.label{
  width: 100%;
  height: 8%;
  border-bottom: 1rpx solid black;
  position: absolute;
  top: 50rpx;
  display: flex;
  align-items: center;
  vertical-align: middle;
}
.label image{
  width: 30rpx;
  height: 50rpx;
  margin-left: 10rpx;
}
.labelItem{
  width: 20%;
  height: 60%;
  border: 1rpx solid black;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 10rpx;
  float: left;
  margin-left: 20rpx;
  font-size: 30rpx;
}

.kind{
  width: 100%;
  position: absolute;
  top: 150rpx;
}

.kindItem{
  width: 95%;
  height: 300rpx;
  margin: auto auto;
  display: flex;
  text-align: center;
  align-items: center;
  margin-top: 20rpx;
}

#title{
  width: 15%;
  height: 100%;
  background: rgb(244, 227, 147);
  font-size: 60rpx;
  border: 1rpx solid  black;
  border-radius: 5rpx;
  display: flex;
  align-items: center;
}

#sortPic{
  width: 80%;
  height: 100%;
  float: left;
  margin-left: 10rpx;
}
#sortPic image{
  width: 580rpx;
  height: 300rpx;
  border-radius: 10rpx;
}