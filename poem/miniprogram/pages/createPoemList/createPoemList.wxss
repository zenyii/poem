/* miniprogram/pages/createPoemList/createPoemList.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.myPoem{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  background: rgb(227, 227, 227);
}

#back{
  width: 30rpx;
  height: 45rpx;
  margin: 0 30rpx;
}

.topic{
  position: absolute;
  top: 50rpx;
  width: 100%;
  height: 6%;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  background: white;
  vertical-align: middle;
  border-bottom: 1rpx solid rgb(211, 211, 211);
}
#edit{
  width: 50rpx;
  height: 50rpx;
  margin-left: 200rpx;
}

.poemList{
  width: 100%;
  position: absolute;
  top: 180rpx;
}

.poemBox{
  width: 40%;
  height: 450rpx;
  border: 1rpx solid rgb(190, 190, 190);
  margin-left: 50rpx;
  margin-bottom: 40rpx;
  box-shadow: 5rpx 7rpx 10rpx rgb(148, 148, 148);
  background: white;
  float: left;
}

.poemBox image{
  width: 100rpx;
  height: 100rpx;
  margin: auto auto;
}

#listPic{
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx auto;
}
#listPic image{
  width: 250rpx;
  height: 250rpx;
}

#name{
  width: 100%;
  font-family:  STKaiti;
  font-size: 40rpx;
  text-align: center;
  color:rgb(88, 87, 87);
  margin-top: 100rpx;
}