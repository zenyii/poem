/* miniprogram/pages/createPoemList/createPoemList.wxss */
page{
  width: 100%;
  height: 100%;
  position: relative;
  overflow: hidden;
}
.myPoem{
  width: 100%;
  height: 100%;
  overflow: hidden;
  position: relative;
  background: rgb(227, 227, 227);
}

#back{
  width: 30rpx;
  height: 45rpx;
  margin: 0 30rpx;
}

.topic{
  position: absolute;
  top: 50rpx;
  width: 100%;
  height: 6%;
  display: flex;
  align-items: center;
  font-size: 50rpx;
  background: white;
  vertical-align: middle;
  border-bottom: 1rpx solid rgb(211, 211, 211);
}
#edit{
  width: 50rpx;
  height: 50rpx;
  margin-left: 200rpx;
}

.poemList{
  width: 100%;
  position: absolute;
  top: 180rpx;
}

.poemBox{
  width: 42%;
  height: 450rpx;
  border: 1rpx solid rgb(190, 190, 190);
  margin-left: 40rpx;
  margin-bottom: 40rpx;
  box-shadow: 5rpx 7rpx 10rpx rgb(148, 148, 148);
  background: white;
  float: left;
}

.poemBox image{
  width: 100rpx;
  height: 100rpx;
  margin: auto auto;
}

#radio{
  width: 45rpx;
  height: 45rpx;
  float: right;
  margin: 5rpx;
}

#listPic{
  width: 250rpx;
  height: 250rpx;
  margin: 20rpx auto;
}
#listPic image{
  width: 250rpx;
  height: 250rpx;
}

#name{
  width: 100%;
  font-family:  STKaiti;
  font-size: 40rpx;
  text-align: center;
  color:rgb(88, 87, 87);
  margin-top: 100rpx;
}

/*checkbox 整体大小  */
checkbox {
  width: 50rpx;
  height: 60rpx;
  float: right;
}
/*checkbox 选项框大小  */
checkbox .wx-checkbox-input {
  width: 40rpx;
  height: 40rpx;
  border-radius: 50%;
}
/*checkbox选中后样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked {
  background:white;
}
/*checkbox选中后图标样式  */
checkbox .wx-checkbox-input.wx-checkbox-input-checked::before {
  width: 28rpx;
  height: 28rpx;
  line-height: 28rpx;
  text-align: center;
  font-size: 22rpx;
  color: black;
  background: transparent;
  transform: translate(-50%, -50%) scale(1);
  -webkit-transform: translate(-50%, -50%) scale(1);
}