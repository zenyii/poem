/* miniprogram/pages/teaRoom/teaRoom.wxss */

/* header */

.zhaiHeader .mine {
    width: 60rpx;
    height: 45rpx;
}

.zhaiHeader .inform {
    width: 41rpx;
    height: 56rpx;
}

.searchBar {
    display: flex;
    justify-content: center;
    background: #C09550;
    height: 88rpx;
    width: 100vw;
    margin-top: 137rpx;
}

.searchBar .searchBarBg {
    display: flex;
    width: 511rpx;
    height: 61rpx;
    border-radius: 24rpx;
    background: white;
    align-self: center;
}

.search {
    padding-left: 20rpx;
    width: 84%;
    height: 61rpx;
    font-size: 14px;
}

.searchBarBg image {
    width: 38rpx;
    height: 38rpx;
    align-self: center;
}

.banner {
    padding: 10rpx 24rpx;
}

.banner swiper-item {
    position: relative;
}

/* .wx-swiper-dots {
