.body{
    height: 100vh;
    background: no-repeat;
    background-size: 100%;
}
.des{
    width: 100%;
    height: 17vh;
    position: relative;
    bottom: 0;
}
.des .text{
    color: #C09550;
    font-size: 14px;
    margin: 10px 10px;  
}
.bottomTips{
  position: absolute;
  bottom: 0;
}
button{
    position: fixed;
    bottom: 0;
    background-color: transparent;
    width: 100%;
}
button::after {
    border: none;
}

button image{
    width: 128rpx;
    height: 128rpx;
}

.center{
    width: 100vw;
    display: flex;
    flex-direction: column;
    margin-top: 190rpx;
}

.center .logo{
    width: 230rpx;
    height: 230rpx;
    margin: 0 auto;
}
.center .words{
    position: relative;
    margin: 42rpx 0;
    display: flex;
}

.words .name{
    width: 42rpx;
    height: 101rpx;
    margin: 0 auto
}

.words .word{
    width:27rpx;
    height: 148rpx;
    position: absolute;
    left: 40vw;
    top: 30rpx;
}
