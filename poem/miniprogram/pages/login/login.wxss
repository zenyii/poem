.body {
    height: 100vh;
    background: no-repeat;
    background-size: 100%;
}

.des {
    width: 100%;
    height: 17vh;
    position: relative;
    bottom: 0;
}

.des .text {
    color: lightgray;
    font-size: 12px;
    margin: 2px 10px;
}

.bottomTips {
    position: fixed;
    bottom: 118rpx;
    left:172rpx;
}

button {
    position: fixed;
    bottom: 195rpx;
    background-color: transparent;
    width: 100%;
}

button::after {
    border: none;
}

.btn-hover{
    background-color: transparent;
}

button image {
    width: 128rpx;
    height: 128rpx;
}

.center {
    width: 100vw;
    display: flex;
    flex-direction: column;
    padding-top: 115rpx;
}

.center .logo {
    width: 230rpx;
    height: 230rpx;
    margin: 0 auto;
}

.center .words {
    position: relative;
    margin: 42rpx 0;
    display: flex;
}

.words .name {
    width: 81rpx;
    height: 195rpx;
    margin: 0 auto
}

.words .word {
    width: 38rpx;
    height: 211rpx;
    position: absolute;
    left: 37vw;
    top: 30rpx;
}