<view style="padding-bottom:50px">
    <view class="teaZhai">
        <view class="zhaiHeader">
            <image class="mine" src="{{imgSrc}}mine.png" bindtap="moreCard" />
            <span class="zhaiTitle">茶斋</span>
            <image class="inform" src="{{imgSrc}}news.png" />
        </view>
        <view class="zhaiBanner banner">
            <image src="{{imgSrc}}首页插图@2x.png" />
        </view>
        <view class="zhaiContent">
            <block wx:for="{{zhaiItem}}" wx:key="this" wx:for-item="GparentItem" wx:for-index="GparentIndex">
                <view class="zhaiDate">
                    <image class="left" src="{{imgSrc}}timeLeft.png" />
                    <span class="dateChinese">{{GparentItem.date}}</span>
                    <!-- 动态 -->
                    <!-- <image src="{{imgSrc}}己亥年己巳月辛亥日@2x.png" /> -->
                    <image class="right" src="{{imgSrc}}timeRight.png" />
                </view>
                <block wx:for="{{GparentItem.content}}" wx:key="this" wx:for-item="parentItem" wx:for-index="parentIndex">
                    <view class="zhaiItem" data-gparentindex="{{GparentIndex}}" data-parentindex="{{parentIndex}}" bindtap="detailMsg">
                        <image class="line" src="{{imgSrc}}line.png" />
                        <span class="displayClass" style="background-image:url('{{imgSrc}}题目框@2x.png')">
                            {{parentItem.class}}
                        </span>
                        <view class="ItemText">
                            <block wx:for="{{parentItem.poem}}" wx:key="this">
                                <view class="textList">{{item}}</view>
                            </block>
                        </view>
                        <view wx:if="{{parentItem.showImg}}" class="zhaiBanner">
                            <image src="{{imgSrc}}{{parentItem.showImg}}" />
                        </view>
                        <view class="detailMsg" data-gparentindex="{{GparentIndex}}" data-parentindex="{{parentIndex}}" catchtap="interact">
                            <view class="author">
                                <image src="{{imgSrc}}{{parentItem.authorAvatar}}" id="author" />
                                <span>{{parentItem.nickName}}</span>
                            </view>
                            <view class="interact">
                                <view class="collect">
                                    <image class="{{parentItem.collectYoN&&'collectAct'}}" src="{{parentItem.collectYoN?imgSrc+'collectAct.png':imgSrc+'collect.png'}}" id="collect" />
                                    <text>{{parentItem.collectNum}}</text>
                                </view>
                                <view class="comment">
                                    <image src="{{imgSrc}}commont.png" id="commont" />
                                    <text>{{parentItem.commentNum}}</text>
                                </view>
                            </view>
                        </view>
                    </view>
                </block>
            </block>
        </view>
    </view>
</view>
<view class="tab-bar">
    <!-- <cover-view class="tab-bar-border"></cover-view> -->
    <view wx:for="{{list}}" wx:key="index" class="tab-bar-item bar{{index}}" data-path="{{item.pagePath}}" data-index="{{index}}" bindtap="switchTab">
        <image wx:if="{{index!=1}}" class="image" src="{{selected === index ? item.selectedIconPath : item.iconPath}}">
            <!-- <view class="cross" wx:if="{{index===1}}"></view> -->
        </image>
        <image wx:if="{{index==1}}" class="image  {{selected === index ? 'barson2':'barson1'}}" src="{{selected === index ? item.selectedIconPath : item.iconPath}}">
            <!-- <view class="cross" wx:if="{{index===1}}"></view> -->
        </image>
        <view class="view" style="color: {{selected === index ? selectedColor : color}};">
            {{item.text}}
        </view>
    </view>
</view>
