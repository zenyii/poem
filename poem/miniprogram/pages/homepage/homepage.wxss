/* more */

.more, .hideCard, .showCard {
  position: fixed;
  top: 0;
  left: 0;
  background: rgba(0, 0, 0, .7);
  width: 100vw;
  height: 100vh;
  transition: all .1s;
  transform-origin: left top;
  z-index: 5;
}

 .moreCard,.showSmallCard {
  position: absolute;
  left: 0;
  top: 0;
  width: 506rpx;
  height: 100vh;
  background: #2f2f2f;
  color: white;
}

.hideCard {
  top: 0;
  left: 0;
  transform: rotate(90deg);
  transform: skewX(0.5);
  border-radius: 50%;
}

.showCard,.showSmallCard {
  left: 0;
  top: 0;
  transform: rotateX(0deg);
  transform: skewX(1);
  border-radius: 0;
  z-index: 5;

}
.showSmallCard {
  transition: all .3s;
  transform-origin: left top;
}


