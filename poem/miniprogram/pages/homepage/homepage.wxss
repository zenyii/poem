/* 底部栏 */

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  padding-top: 5px;
  border-top: #f2f2f2;
  border-top: 1px solid #f2f2f2;
}

.tab-bar-item, .bar1 {
  overflow: visible;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .image {
  width: 20px;
  height: 20px;
  overflow: visible;
}

.bar1 .image {
  width: 56px;
  height: 56px;
  margin: 0 auto;
  bottom: 22px;
  z-index: 2;
}

