/**app.wxss**/
page{
  width: 750rpx;
  overflow: hidden;
}

.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  box-sizing: border-box;
} 

button {
  background: initial;
}

button:focus{
  outline: 0;
}

button::after{
  border: none;
}

image, span {
  display: inline-block;
}

/* header */
/* header */


.zhaiHeader {
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  height: 68px;
  padding: 25px 0 0 20px;
  border-bottom: 1px solid #e8e8e8;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-content: center;
  background: white;
  z-index: 1;
  box-sizing: border-box;
}

.zhaiHeader .mine {
  margin: 0 10px 0 0;
}

.zhaiHeader .zhaiTitle {
  font-family: STKaiti;
  font-size: 26px;
  padding-top: 2px;
  line-height: 36px;
}

.zhaiHeader .inform {
  padding: 0 0 0 10px;
}

.verticalCenter{
  display: flex;
  align-self: center;
}

.line{
  width:100%;
  height: 2rpx;
  background: #f2f2f2;
}

/* 底部栏 */

.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 48px;
  background: white;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  padding-top: 5px;
  border-top: 1px solid #f2f2f2;
}

.tab-bar-item {
  overflow: visible;
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item .image {
  width: 20px;
  height: 20px;
  overflow: visible;
}

.bar1.image {
  width: 56px;
  height: 56px;
  margin: 0 auto;
  bottom: 22px;
  z-index: 2;
  transition: all .5s;
}

.barson2{
  transform: rotate(-45deg)
}

.barson1{
  transform: rotate(0deg)
}

.buildMap{
  position: fixed;
  left: 0;
  width: 100vw;
  height: 100vh;
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  font-size: 18px;
  color: white;
  text-align: center;
  background: rgba(0, 0, 0, .7);
  z-index: 2;
  transition: all .3s;
}

.buildMapShow{
  bottom: 0;
}

.buildMapHide{
  bottom: -100%;
}

.buildItem{
  margin: 491rpx 0 0;
}

.buildItem image{
  width: 160rpx;
  height: 160rpx;
}

.unBuildIcon{
  width:200rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  overflow: visible;
  padding-top: 5px;
  justify-content: center;
  z-index: 2;
  margin: 0 auto;
}


@keyframes collectAct {
  0% {
    transform: scale(1)
  }
  25% {
    transform: scale(1.1)
  }
  50% {
    transform: scale(1.2)
  }
  75% {
    transform: scale(1.1)
  }
  100% {
    transform: scale(1)
  }
}


